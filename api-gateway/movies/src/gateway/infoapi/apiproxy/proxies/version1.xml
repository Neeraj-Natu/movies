<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="version1">
    <Description/>
    <FaultRules/>
    <PreFlow name="PreFlow">
        <Request/>
        <Response/>
    </PreFlow>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <Flows>
        <Flow name="movie-ratings">
            <Description>Get Information on Movie ratings</Description>
            <Request/>
            <Condition>(proxy.pathsuffix MatchesPath "/ratings") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="movie-revenue">
            <Description>Get Information on Movie revenues</Description>
            <Request/>
            <Condition>(proxy.pathsuffix MatchesPath "/revenues") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="movie-popularity">
            <Description>Get Information on Movie popularity</Description>
            <Request/>
            <Condition>(proxy.pathsuffix MatchesPath "/popularity") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="movie-details">
            <Description>Get Information on Movies</Description>
            <Request/>
            <Condition>(proxy.pathsuffix MatchesPath "/details") and (request.verb = "GET")</Condition>
        </Flow>
    </Flows>
    <HTTPProxyConnection>
        <BasePath>/movies/v1/info</BasePath>
        <Properties/>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="default">
        <TargetEndpoint>default</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>