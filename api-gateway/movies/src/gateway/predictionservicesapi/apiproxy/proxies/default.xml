<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <Description/>
    <FaultRules/>
    <PreFlow name="PreFlow">
        <Request/>
        <Response/>
    </PreFlow>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <Flows>
        <Flow name="movie-ratings">
            <Description>Get predictions on Movie</Description>
            <Request/>
            <Condition>(proxy.pathsuffix MatchesPath "/movies/predictions") and (request.verb = "GET")</Condition>
        </Flow>        
    </Flows>
    <HTTPProxyConnection>
        <BasePath>/prediction-services</BasePath>
        <Properties/>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="default">
        <TargetEndpoint>default</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>